$b-tile
    display block
    text-decoration none
    box-sizing border-box
    border 1px solid #eee
    
    &__image
        display block
        width 100%
        
        &-wrapper
            position relative
            background #f5f5f5
            
            &::after
                content ''
                display block
                position absolute
                top 0
                left 0
                width 100%
                height 100%
                background radial-gradient(ellipse, #999, #000)
                opacity 0
                transition .5s opacity ease
            
                ~/:hover &
                    opacity 0.5
                
    &__info
        text-align center
        padding 1em 0

    &__title
        font-size 2em
        line-height 1.5
        font-weight 700
        color #333
        
    &__description
        font-size 1.2em
        line-height 1.5
        color #777